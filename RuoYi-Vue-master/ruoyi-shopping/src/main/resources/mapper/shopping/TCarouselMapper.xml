<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.carousel.mapper.TCarouselMapper">
    
    <resultMap type="TCarousel" id="TCarouselResult">
        <result property="carouselId"    column="carousel_id"    />
        <result property="carouselUrl"    column="carousel_url"    />
        <result property="carouselName"    column="carousel_name"    />
    </resultMap>

    <sql id="selectTCarouselVo">
        select carousel_id, carousel_url, carousel_name from t_carousel
    </sql>

    <select id="selectTCarouselList" parameterType="TCarousel" resultMap="TCarouselResult">
        <include refid="selectTCarouselVo"/>
        <where>  
            <if test="carouselName != null  and carouselName != ''"> and carousel_name like concat('%', #{carouselName}, '%')</if>
        </where>
    </select>
    
    <select id="selectTCarouselByCarouselId" parameterType="Long" resultMap="TCarouselResult">
        <include refid="selectTCarouselVo"/>
        where carousel_id = #{carouselId}
    </select>

    <insert id="insertTCarousel" parameterType="TCarousel" useGeneratedKeys="true" keyProperty="carouselId">
        insert into t_carousel
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="carouselUrl != null">carousel_url,</if>
            <if test="carouselName != null and carouselName != ''">carousel_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="carouselUrl != null">#{carouselUrl},</if>
            <if test="carouselName != null and carouselName != ''">#{carouselName},</if>
         </trim>
    </insert>

    <update id="updateTCarousel" parameterType="TCarousel">
        update t_carousel
        <trim prefix="SET" suffixOverrides=",">
            <if test="carouselUrl != null">carousel_url = #{carouselUrl},</if>
            <if test="carouselName != null and carouselName != ''">carousel_name = #{carouselName},</if>
        </trim>
        where carousel_id = #{carouselId}
    </update>

    <delete id="deleteTCarouselByCarouselId" parameterType="Long">
        delete from t_carousel where carousel_id = #{carouselId}
    </delete>

    <delete id="deleteTCarouselByCarouselIds" parameterType="String">
        delete from t_carousel where carousel_id in 
        <foreach item="carouselId" collection="array" open="(" separator="," close=")">
            #{carouselId}
        </foreach>
    </delete>
</mapper>