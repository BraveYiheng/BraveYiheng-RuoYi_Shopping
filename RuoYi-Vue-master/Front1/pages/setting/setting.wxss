/* pages/setting/setting.wxss */
@import "../my/my.wxss";

.setting-container {
  background: #f7f7f7;
  min-height: 100vh;
}
.setting-section {
  background: #fff;
  border-radius: 16px;
  margin: 16px 16px 0 16px;
  overflow: hidden;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
}
.setting-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 22px 18px 22px 18px;
  font-size: 16px;
  color: #222;
  border-bottom: 1px solid #f2f2f2;
}
.setting-item:last-child {
  border-bottom: none;
}