/* pages/detail/detail.wxss */
.detail-container {
  background: #fff;
  padding-bottom: 20px;
}
.detail-img {
  width: 100%;
  height: 220px;
  object-fit: cover;
  display: block;
}
.detail-header {
  padding: 0 12px;
}
.detail-title {
  font-size: 18px;
  font-weight: bold;
  margin: 16px 0 8px 0;
  color: #222;
}
.detail-tags {
  margin-bottom: 6px;
}
.sign {
  color: #e64340;
  border: 1px solid #e64340;
  border-radius: 4px;
  padding: 2px 6px;
  font-size: 12px;
  margin-left: 6px;
}
.detail-price-row {
  display: flex;
  align-items: baseline;
  gap: 10px;
}
.detail-price {
  color: #e64340;
  font-size: 22px;
  font-weight: bold;
}
.detail-origin-price {
  color: #999;
  font-size: 14px;
  text-decoration: line-through;
}
.detail-desc {
  color: #666;
  font-size: 14px;
  margin: 0 12px 8px 12px;
}
.detail-meta {
  margin: 0 12px 12px 12px;
  font-size: 13px;
  color: #888;
}
.detail-meta view {
  margin-bottom: 4px;
}
.detail-ops {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  margin: 0 12px 8px 12px;
}
.share-btn, .fav-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 16px;
  padding: 4px 16px;
  font-size: 14px;
}
.detail-select {
  margin: 0 12px 12px 12px;
  font-size: 13px;
  color: #444;
  background: #f8f8f8;
  border-radius: 8px;
  padding: 8px 10px;
}
.detail-actions {
  display: flex;
  justify-content: space-around;
  margin: 20px 12px 0 12px;
}
.cart-btn, .buy-btn {
  flex: 1;
  margin: 0 8px;
  height: 40px;
  border-radius: 20px;
  font-size: 16px;
}
.cart-btn {
  background: #fffbe8;
  color: #e6a23c;
  border: 1px solid #e6a23c;
}
.buy-btn {
  background: #e64340;
  color: #fff;
  border: none;
}