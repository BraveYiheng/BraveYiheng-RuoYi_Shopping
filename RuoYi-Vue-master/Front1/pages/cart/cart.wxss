/* 数量操作区域，横向排列，居中 */
.item-stepper {
  display: flex; /* 横向排列 */
  align-items: center; /* 垂直居中 */
  background: #eeeeee; /* 浅灰背景 */
  border-radius: 24rpx; /* 圆角 */
  padding: 0 5rpx; /* 左右内边距 */
}

/* 数量按钮，主色圆角，白色字体 */
.stepper-btn {
  width: 20rpx; /* 调整宽度 */
  height: 20rpx; /* 调整高度 */
  background: #c2d9da; /* 主色 */
  color: rgb(24, 22, 22); /* 白色字体 */
  display: flex; /* 居中 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  font-size: 28rpx; /* 调整字体大小 */
  margin: 0 10rpx 0 0; /* 左右间距增大为 16rpx */
}

/* 数量数字，深色字体 */
.stepper-num {
  color: #222831; /* 深色字体 */
  font-size: 26rpx; /* 字体大小 */
  min-width: 32rpx; /* 最小宽度 */
  text-align: center; /* 居中 */
}

/* 固定位置的全选按钮 */
.fixed-select-all {
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  background: rgb(237, 239, 240);
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 固定位置的结算按钮 */
.fixed-checkout-btn {
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
  width: 200rpx;
  border-radius: 50rpx;
}

/* 购物车页面整体容器，浅灰背景，撑满全屏 */
.cart-container {
  min-height: 100vh;
  background: #eeeeee;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx; /* 为底部固定栏留出空间 */
}

.cart-header {
  background: #00adb5;
  padding: 40rpx 0 24rpx 0;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.cart-title {
  color: rgb(243, 241, 241);
  font-size: 36rpx;
  letter-spacing: 2rpx;
}

.cart-list {
  margin-top: 100rpx; /* 为固定头部留出空间 */
  flex: 1;
  overflow-y: auto;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 15rpx;
  border: 2rpx solid rgb(172, 168, 168);
  border-radius: 10rpx;
  margin: 15rpx;
  background: #fff;
}

.item-img {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 5rpx;
  margin-left: 20rpx;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-attr {
  font-size: 24rpx;
  color: #666;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.item-price {
  font-size: 32rpx;
  color: #e64340;
}

.item-stepper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 24rpx;
  padding: 4rpx 8rpx;
}

.stepper-btn {
  width: 50rpx;
  height: 50rpx;
  background: #c2d9da;
  color: #222831;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border-radius: 50%;
}

.stepper-num {
  color: #222831;
  font-size: 26rpx;
  min-width: 60rpx;
  text-align: center;
}

.item-total {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 底部结算栏样式 */
.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.footer-left {
  display: flex;
  align-items: center;
}

.footer-left text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.footer-right {
  display: flex;
  align-items: center;
}

.total-price {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.total-price .price {
  color: #e64340;
  font-size: 32rpx;
  font-weight: bold;
}

.checkout-btn {
  background: #00adb5;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0;
}