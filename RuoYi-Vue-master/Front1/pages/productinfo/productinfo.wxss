/* pages/productinfo/productinfo.wxss */

/* 商品详情页整体容器，浅灰背景，撑满全屏 */
.productinfo-container {
  min-height: 100vh;
  /* 最小高度全屏 */
  background: #f7f7f7;
  /* 浅灰色背景 */
  display: flex;
  /* 使用flex布局 */
  flex-direction: column;
  /* 垂直排列 */
  padding-bottom: 120rpx;
  /* 预留底部操作栏空间 */
}

/* 商品大图，居中显示，白底圆角 */
.product-image {
  width: 100vw;
  /* 宽度90%视口宽 */
  height: 752rpx;
  /* 高度 */
  display: block;
  /* 块级显示 */
  margin: 0 auto 0 auto;
  /* 上外边距，左右居中 */
  background: #fff;
  /* 白色背景 */
  /* 圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  /* 阴影 */
  overflow: hidden;
}

/* 价格与促销区，橙色渐变背景，圆角卡片 */
.price-section {
  display: flex;
  /* 横向排列 */
  justify-content: space-between;
  /* 两端对齐 */
  align-items: center;
  /* 垂直居中 */
  background: linear-gradient(90deg, #ff7e5f, #feb47b);
  /* 渐变背景 */
  border-radius: 20rpx;
  /* 圆角 */
  margin: 24rpx 6rpx 0 6rpx;
  /* 外边距 */
  padding: 24rpx 20rpx 16rpx 20rpx;
  /* 内边距 */
  box-shadow: 0 2rpx 8rpx rgba(255, 126, 95, 0.08);
  /* 阴影 */
}

.price-left {
  display: flex;
  /* 横向排列 */
  align-items: center;
  /* 垂直居中 */
}

.price {
  color: #fff;
  /* 白色字体 */
  font-size: 38rpx;
  /* 字体大小 */
  font-weight: bold;
  /* 加粗 */
  margin-right: 18rpx;
  /* 右间距 */
}

.tag {
  background: #fff;
  /* 白底 */
  color: #ff7e5f;
  /* 橙色字体 */
  font-size: 22rpx;
  /* 字体大小 */
  border-radius: 8rpx;
  /* 圆角 */
  padding: 4rpx 14rpx;
  /* 内边距 */
  margin-right: 10rpx;
  /* 右间距 */
}

.price-right {
  display: flex;
  /* 横向排列 */
  align-items: center;
  /* 垂直居中 */
}

/* 商品标题，黑色加粗，卡片内边距 */
.product-title {
  font-size: 36rpx;
  /* 字体大小 */
  color: #222831;
  /* 深色字体 */
  font-weight: bold;
  /* 加粗 */
  margin: 18rpx 16rpx 0 16rpx;
  /* 外边距 */
  line-height: 1.5;
  /* 行高 */
}

/* 属性区，横向排列，卡片风格 */
.attr-section {
  display: flex;
  /* 横向排列 */
  flex-wrap: wrap;
  /* 自动换行 */
  margin: 18rpx 16rpx 0 16rpx;
  /* 外边距 */
}

.attr-item {
  background: #fff;
  /* 白底 */
  color: #00adb5;
  /* 主色字体 */
  font-size: 26rpx;
  /* 字体大小 */
  border-radius: 8rpx;
  /* 圆角 */
  padding: 6rpx 18rpx;
  /* 内边距 */
  margin-right: 16rpx;
  /* 右间距 */
  margin-bottom: 10rpx;
  /* 下间距 */
  box-shadow: 0 2rpx 8rpx rgba(0, 173, 181, 0.06);
  /* 阴影 */
}

/* 底部操作栏，悬浮固定底部，白底阴影，圆角 */
.bottom-bar {
  position: fixed;
  /* 固定底部 */
  left: 0;
  /* 左对齐 */
  right: 0;
  /* 右对齐 */
  bottom: 0;
  /* 底部对齐 */
  background: #fff;
  /* 白底 */
  display: flex;
  /* 横向排列 */
  align-items: center;
  /* 垂直居中 */
  justify-content: space-between;
  /* 两端对齐 */
  padding: 16rpx 12rpx 32rpx 12rpx;
  /* 内边距 */
  box-shadow: 0 -2rpx 12rpx rgba(0, 173, 181, 0.08);
  /* 顶部阴影 */
  border-top-left-radius: 24rpx;
  /* 左上圆角 */
  border-top-right-radius: 24rpx;
  /* 右上圆角 */
  z-index: 99;
  /* 保证在最上层 */
}

/* 底部按钮通用样式 */
.bar-btn {
  flex: 1;
  /* 平分宽度 */
  display: flex;
  /* 居中 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  font-size: 28rpx;
  /* 字体大小 */
  font-weight: bold;
  /* 加粗 */
  border-radius: 32rpx;
  /* 圆角 */
  margin: 0 10rpx;
  /* 左右间距 */
  padding: 18rpx 0;
  /* 上下内边距 */
}

/* 加入购物车按钮，黄色渐变背景，白色字体 */
.bar-btn-add {
  background: linear-gradient(90deg, #ffd600, #ff9800);
  /* 渐变背景 */
  color: #fff;
  /* 白色字体 */
  box-shadow: 0 2rpx 8rpx rgba(255, 152, 0, 0.10);
  /* 按钮阴影 */
}

/* 立即购买按钮，红色渐变背景，白色字体 */
.bar-btn-buy {
  background: linear-gradient(90deg, #ff3d00, #ff1744);
  /* 渐变背景 */
  color: #fff;
  /* 白色字体 */
  box-shadow: 0 2rpx 8rpx rgba(255, 61, 0, 0.10);
  /* 按钮阴影 */
}