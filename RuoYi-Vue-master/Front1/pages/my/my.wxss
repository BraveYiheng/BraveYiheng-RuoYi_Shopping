/* pages/my/my.wxss */
/* 顶部绿色背景卡片 */
.my-container{
  background-color: #F7F7F7;
  height: 100vh;
}
.my-bg-card {
  background: #00c2a5; /* 绿色背景 */
  border-radius: 18px; /* 圆角 */
  margin: 16px 16px 0 16px; /* 外边距 */
  padding: 15px 15px 15px 15px; /* 内边距 */
  display: flex; /* 弹性布局 */
  align-items: center; /* 垂直居中 */
  position: relative; /* 相对定位 */
}
/* 头像行布局 */
.my-avatar-row {
  display: flex; /* 弹性布局 */
  align-items: center; /* 垂直居中 */
  width: 100%; /* 占满宽度 */
}
/* 头像样式 */
.my-avatar {
  width: 60px; /* 宽度 */
  height: 60px; /* 高度 */
  border-radius: 50%; /* 圆形头像 */
  background: #fff; /* 白色背景 */
  border: 2px solid #fff; /* 白色边框 */
}
/* 用户信息区域 */
.my-info {
  margin-left: 18px; /* 左边距 */
  flex: 1; /* 占据剩余空间 */
}
/* 昵称样式 */
.my-nickname {
  color: #fff; /* 白色字体 */
  font-size: 21px; /* 字号 */
  font-weight: bold; /* 加粗 */
  margin-bottom: 6px; /* 下边距 */
  letter-spacing: 1px;
  text-shadow:  2px 3px 0 rgba(0, 0, 0, 0.08);
}

/* 订单/服务区块卡片 */
.my-section {
  background: #fff; /* 白色背景 */
  border-radius: 16px; /* 圆角 */
  margin: 16px 16px 0 16px; /* 外边距 */
  padding: 18px 16px 12px 16px; /* 内边距 */
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04); /* 阴影 */
}
/* 订单中心标题行 */
.my-section-title-row {
  display: flex; /* 弹性布局 */
  justify-content: space-between; /* 两端对齐 */
  align-items: center; /* 垂直居中 */
  margin-bottom: 18px; /* 下边距 */
}
/* 区块标题 */
.my-section-title {
  font-size: 15px; /* 字号 */
  font-weight: bold; /* 加粗 */
  color: #222; /* 深色字体 */
}
/* 区块右侧"全部" */
.my-section-more {
  font-size: 15px; /* 字号 */
  color: #888; /* 灰色字体 */
}
/* 订单状态icon行 */
.my-order-icons {
  display: flex; /* 弹性布局 */
  justify-content: space-between; /* 平分间距 */
  margin-bottom: 18px; /* 下边距 */
}
/* 单个订单状态项 */
.my-order-item {
  display: flex; /* 弹性布局 */
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 居中 */
  flex: 1; /* 平分宽度 */
}
/* 订单状态icon图片 */
.my-order-icon {
  width: 32px; /* 宽度 */
  height: 32px; /* 高度 */
  margin-bottom: 6px; /* 下边距 */
}
.my-order-item text{
  font-size: 13px;
}
/* 基础服务六宫格 */
.my-service-grid {
  display: flex; /* 弹性布局 */
  flex-wrap: wrap; /* 换行 */
  margin-top: 12px; /* 上边距 */
}
/* 单个服务项 */
.my-service-item {
  width: 33.33%; /* 三等分 */
  display: flex; /* 弹性布局 */
  flex-direction: column; /* 垂直排列 */
  align-items: center; /* 居中 */
  margin-bottom: 18px; /* 下边距 */
}
.my-service-item text{
  font-size: 13px;
}
/* 服务icon图片 */
.my-service-icon {
  width: 30px; /* 宽度 */
  height: 30px; /* 高度 */
  margin-bottom: 6px; /* 下边距 */
}
/* 退出登录按钮区域 */
.my-logout-row {
  margin: 36px 0 24px 0; /* 上下外边距 */
  display: flex; /* 弹性布局 */
  justify-content: center; /* 居中 */
}
/* 退出登录按钮样式 */
.my-logout-btn {
  width: 80%; /* 宽度 */
  background: #ff4d4f; /* 红色背景 */
  color: #fff; /* 白色字体 */
  border: none; /* 无边框 */
  border-radius: 24px; /* 圆角 */
  font-size: 18px; /* 字号 */
  padding: 14px 0; /* 内边距 */
  box-shadow: 0 2px 12px 0 rgba(255,77,79,0.08); /* 阴影 */
}