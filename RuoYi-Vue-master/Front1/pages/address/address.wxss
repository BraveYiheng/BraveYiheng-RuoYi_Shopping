.address-list {
  padding: 16px;
  background: #f7f7f7;
  min-height: 100vh;
}

.address-item {
  background: #fff;
  border-radius: 12px;
  margin-bottom: 12px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.address-info {
  margin-bottom: 12px;
  flex:1;
}

.address-user {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.name {
  font-size: 16px;
  font-weight: bold;
  margin-right: 12px;
}

.phone {
  color: #666;
}

.default-tag {
  margin-left: 8px;
  background: #e64340;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
}

.address-detail {
  color: #666;
  font-size: 14px;
  line-height: 1.4;
}

.address-actions {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
}

.set-default-btn, .edit-btn, .delete-btn {
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 12px;
  background: #fff;
}

.set-default-btn {
  color: #e6a23c;
  border: 1px solid #e6a23c;
}

.edit-btn {
  color: #409eff;
  border: 1px solid #409eff;
}

.delete-btn {
  color: #f56c6c;
  border: 1px solid #f56c6c;
}

.add-address-btn {
  position: fixed;
  bottom: 20px;
  left: 16px;
  right: 16px;
  height: 44px;
  background: #e64340;
  color: #fff;
  border: none;
  border-radius: 22px;
  font-size: 16px;
}

/* 对话框样式 */
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 12px 12px 0 0;
  padding: 20px;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  font-size: 16px;
  font-weight: bold;
}

.close-btn {
  font-size: 24px;
  color: #999;
}

.form-item {
  margin-bottom: 16px;
}

.label {
  display: block;
  margin-bottom: 8px;
  color: #666;
}

.input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 14px;
}

.textarea {
  width: 100%;
  height: 80px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 8px 12px;
  font-size: 14px;
}

.dialog-footer {
  display: flex;
  justify-content: flex-end;
  gap: 12px;
  margin-top: 20px;
}

.cancel-btn, .confirm-btn {
  padding: 8px 24px;
  border-radius: 20px;
  font-size: 14px;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #e64340;
  color: #fff;
}